---
const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";

const navLinks = [
  { label: "Home", href: "/" },
  { label: "About", href: "/about" },
  { label: "Events", href: "/events" },
  { label: "Contact", href: "/contact" }
];
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-gray-50">
    <!-- Navbar at the top -->
    <Navbar logoSrc="/favicon.ico" logoAlt="Club Logo" links={navLinks} />

    <!-- Page content goes here -->
    <main class="p-8">
      <slot /> <!-- This is where page-specific content is inserted -->
    </main>
  </body>
</html>